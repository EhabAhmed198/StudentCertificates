<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A3D60"
    >


    <EditText
        android:id="@+id/nameGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       android:hint="Name of Group"
        android:gravity="center"
        android:layout_margin="20dp"
        android:textColor="#FFF"

        />
    <TextView
        android:id="@+id/tv_uploadPhotoGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Photo Group"
        android:fontFamily="serif-monospace"
        android:textColor="#FFF"
        android:textSize="19sp"
        app:layout_constraintTop_toBottomOf="@id/nameGroup"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="20dp"
        />
    <ImageView
        android:id="@+id/iv_uploadPhotoGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_uploadPhotoGroup"
        app:layout_constraintStart_toEndOf="@id/tv_uploadPhotoGroup"
        android:src="@drawable/upload"
       android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_uploadPhotoGroup"
        android:text="@string/ok"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/btn"

        />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintTop_toBottomOf="@id/tv_uploadPhotoGroup"
        android:text="@string/cancell"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/btn"
        />
</androidx.constraintlayout.widget.ConstraintLayout>